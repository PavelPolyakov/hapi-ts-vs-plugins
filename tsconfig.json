{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2016"
    ],
    "paths": {
      "*": [
        "@types/*"
      ]
    },
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/**/__tests__/*.ts"
  ]
}